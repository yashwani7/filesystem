<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  <div class="container mt-5 d-flex">
    <div class="panel w-25">
      <form action="/create" method="post">
        <input type="text" class="form-control" placeholder="File name" name="filename">
      </form>
      <hr>
      <ol>
        <% files.forEach(function(file){%>
          <li><a class="text-decoration-none" href="/file/<%=file%>">
              <%=file%>
            </a>
            <a class="text-decoration-none" href="/delete/<%=file%>"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;‚ùå</a>

          </li>
          <%})%>


      </ol>
    </div>

    <% if(filename===null){%>
      <h3 class="text-muted mt-5 w-100 text-center">No File Opened !</h3>

      <%} else{%>
        <form class="screen flex-column align-item-start w-75 ms-2" action="/update/<%=filename%>" method="post">
          <textarea 
           class="updatingtext"
           onfocus="changeText()"
           name="filedata" 
           class="form-control  mb-3" 
           name="" id="" cols="130" rows="10">
          <%=filedata%>
        </textarea>
          <button class="btn btn-secondary"><span class="activefile">
              <%=filename%>
            </span> </button>
        </form>
        <%}%>




  </div>


  <script>
    const activefile = document.querySelector(".activefile");
    const updatingtext=document.querySelector(".updatingtext");
    function changeText(e){
      activefile.style.color="black";

    }


  </script>
</body>

</html>